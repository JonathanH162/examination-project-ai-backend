{
  "compilerOptions": {
    "module": "CommonJS",

    "esModuleInterop": true,
    "target": "ES2016",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "include": ["src/**/*"]
}
